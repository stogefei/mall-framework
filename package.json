{
  "name": "mall",
  "version": "9.0.0",
  "description": "zaf-from",
  "private": true,
  "main": "index.js",
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "changed": "lerna changed",
    "clean": "lerna clean",
    "task": "npx gulp --gulpfile ./build/gulp/index.js",
    "cz": "npx git-cz",
    "dev:portal": "yarn run build:packages && cd packages/portal && yarn run dev",
    "dev:admin": "yarn run build:packages && cd packages/admin && yarn run dev",
    "build:api": "lerna run --scope=@amaz/api build",
    "build:theme": "lerna run --scope=@amaz/theme build",
    "build:packages": "yarn run build:theme && yarn run build:api"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:stogefei/mall-framework.git"
  },
  "author": "zaf",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ],
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "packages/**/*.{js,vue,ts,tsx,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    },
    "cz-customizable": {
      "config": "./plugins-config/cz-customizable-config-standard.js"
    }
  },
  "dependencies": {
    "ant-design-vue": "^4.0.0",
    "core-js": "^3.8.3",
    "lodash-es": "^4.17.15"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@babel/plugin-transform-runtime": "^7.22.5",
    "@babel/runtime-corejs3": "^7.22.5",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-router": "~5.0.0",
    "@vue/cli-plugin-typescript": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-import": "^1.13.6",
    "commitizen": "^4.3.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-vue": "^8.0.3",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-standard": "^4.0.1",
    "less": "^4.0.0",
    "less-loader": "^8.0.0",
    "lint-staged": "^13.2.3",
    "prettier": "^2.4.1",
    "typescript": "~4.5.5",
    "husky": "^4.3.8"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "workspaces": [
    "packages/*"
  ]
}
